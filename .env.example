# Copy this file to .env.local (which is gitignored) and adjust per developer
# Strong random secret (>=32 chars). Use a password manager or `openssl rand -hex 32`
JWT_SECRET=REPLACE_WITH_STRONG_SECRET
JWT_EXPIRES_MINUTES=60
JWT_ISSUER=lastmile-cloud
JWT_AUDIENCE=lastmile-users

# Database credentials (each developer can use own Postgres role)
DB_URL=jdbc:postgresql://localhost:5432/lastmile
DB_USER=your_local_username
DB_PASSWORD=your_local_password
DB_POOL_SIZE=5

# This file now only holds direct application env vars; no container settings.

# Optional service ports overrides
HTTP_PORT=8081
GRPC_PORT=9091
